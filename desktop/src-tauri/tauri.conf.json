{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "cd ../client && npm run build",
    "beforeDevCommand": "",
    "frontendDist": "../client/dist",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.cloudclipboard.app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Cloud Clipboard Desktop",
    "longDescription": "A desktop application for cloud clipboard sharing"
  },
  "productName": "Cloud Clipboard",
  "version": "1.0.0",
  "identifier": "com.cloudclipboard.app",
  "plugins": [
    "clipboard-manager",
    "fs",
    "dialog", 
    "notification",
    "store",
    "autostart",
    "window-state"
  ],
  "app": {
    "windows": [
      {
        "title": "Cloud Clipboard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}