{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Cloud Clipboard",
  "version": "1.0.1",
  "identifier": "com.cloudclipboard.app",
  "build": {
    "beforeBuildCommand": "node ../scripts/build-client.js",
    "frontendDist": "../client/dist",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Cloud Clipboard Desktop",
    "longDescription": "A desktop application for cloud clipboard sharing"
  },
  "plugins": {
    "clipboard-manager": {},
    "fs": {},
    "dialog": {},
    "notification": {},
    "store": {}
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Cloud Clipboard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
