# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Client configuration
CLIENT_URL=https://your-domain.com,http://localhost:3000
VITE_SERVER_URL=https://your-domain.com

# File upload configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Room and file management
ROOM_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds (destroy empty rooms)
FILE_RETENTION_HOURS=12  # Files are deleted after 12 hours

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute window
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Security settings
HELMET_ENABLED=true
CORS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health check
HEALTH_CHECK_ENABLED=true

# Performance
COMPRESSION_ENABLED=true