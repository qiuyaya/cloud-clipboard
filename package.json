{
  "name": "cloud-clipboard",
  "version": "1.0.12",
  "description": "A cloud clipboard application for sharing text and files across devices",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"bun run server:dev\" \"bun run client:dev\"",
    "build": "bun run shared:build && bun run server:build && bun run client:build",
    "server:dev": "cd server && bun run dev",
    "server:build": "cd server && bun run build",
    "client:dev": "cd client && bun run dev",
    "client:build": "cd client && bun run build",
    "shared:build": "cd shared && bun run build",
    "desktop:dev": "cd desktop && npm run dev",
    "desktop:build": "cd desktop && node scripts/build-client.js && npm run build",
    "desktop:build-client": "cd desktop && node scripts/build-client.js",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry-run": "node scripts/release.js patch --dry-run",
    "version:check": "node scripts/version-sync.js check",
    "version:report": "node scripts/version-sync.js report",
    "version:outdated": "node scripts/version-sync.js outdated",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "cd shared && tsc --noEmit && cd ../server && tsc --noEmit",
    "shared:type-check": "cd shared && tsc --noEmit",
    "server:type-check": "cd server && tsc --noEmit",
    "client:type-check": "cd client && tsc --noEmit"
  },
  "workspaces": [
    "server",
    "client",
    "shared",
    "desktop"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2"
  }
}
