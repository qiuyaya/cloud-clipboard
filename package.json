{
  "name": "cloud-clipboard",
  "version": "1.4.7",
  "description": "A real-time cloud clipboard application with secure room-based sharing, automatic file management, and modern PWA features",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"bun run server:dev\" \"bun run client:dev\"",
    "build": "bun run icons:generate && bun run client:build && bun run build:production",
    "build:production": "bun run server:build && bun run copy-client",
    "copy-client": "rm -rf server/public && cp -r client/dist server/public",
    "icons:generate": "node scripts/generate-icons.js",
    "start": "bun run server:start",
    "server:dev": "cd server && bun run dev",
    "server:build": "cd server && bun run build",
    "server:start": "cd server && NODE_ENV=production bun run start",
    "client:dev": "cd client && bun run dev",
    "client:build": "cd client && bun run build",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry-run": "node scripts/release.js patch --dry-run",
    "version:check": "node scripts/version-sync.js check",
    "version:report": "node scripts/version-sync.js report",
    "version:outdated": "node scripts/version-sync.js outdated",
    "test": "bun run shared:test && bun run server:test && bun run client:test",
    "test:watch": "concurrently \"bun run shared:test:watch\" \"bun run server:test:watch\" \"bun run client:test:watch\"",
    "test:integration": "bun run server:test:integration",
    "test:e2e": "bun run client:test:e2e",
    "shared:test": "cd shared && bun test",
    "shared:test:watch": "cd shared && bun test --watch",
    "server:test": "cd server && bun run test",
    "server:test:watch": "cd server && bun run test:watch",
    "server:test:integration": "cd server && bun run test:integration",
    "client:test": "cd client && bun run test",
    "client:test:watch": "cd client && bun run test:watch",
    "client:test:e2e": "cd client && bun run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "cd shared && tsc --noEmit --skipLibCheck --skipDefaultLibCheck && cd ../server && tsc --noEmit --skipLibCheck --skipDefaultLibCheck",
    "shared:type-check": "cd shared && tsc --noEmit",
    "server:type-check": "cd server && tsc --noEmit",
    "client:type-check": "cd client && tsc --noEmit",
    "validate": "bun run format:check && bun run lint && bun run type-check && bun run test",
    "validate:ci": "bun run type-check && bun run test",
    "validate:quick": "bun run format:check && bun run lint && bun run type-check",
    "prepare": "husky"
  },
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^3",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "dompurify": "^3.3.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  }
}
