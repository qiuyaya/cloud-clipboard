# Development Environment Configuration Example
# Copy this file to .env for local development

NODE_ENV=development
PORT=3001

# Client configuration
CLIENT_URL=http://localhost:3000,http://localhost:3002
VITE_SERVER_URL=http://localhost:3001

# File upload configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Room and file management
ROOM_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds (destroy empty rooms)
FILE_RETENTION_HOURS=12  # Files are deleted after 12 hours

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute window
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Security settings
HELMET_ENABLED=true
CORS_ENABLED=true
ALLOW_HTTP=true  # Set to true to allow HTTP connections (useful for development/testing)

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health check
HEALTH_CHECK_ENABLED=true

# Performance
COMPRESSION_ENABLED=true