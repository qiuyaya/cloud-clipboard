{
  "name": "@cloud-clipboard/server",
  "version": "1.3.1",
  "description": "High-performance backend server with WebSocket support, smart file management, and automatic room cleanup for cloud clipboard",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration.test.ts"
  },
  "dependencies": {
    "@cloud-clipboard/shared": "workspace:*",
    "express": "^4.18.0",
    "socket.io": "^4.7.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.0",
    "multer": "^1.4.5-lts.1",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/multer": "^1.4.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
